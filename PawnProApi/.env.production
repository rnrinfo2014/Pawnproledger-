# ==================================================================
# PAWNSOFT API PRODUCTION CONFIGURATION FOR RNRINFO.DEV
# ==================================================================
# Copy this file to .env for production deployment

# ==================================================================
# ENVIRONMENT SETTINGS
# ==================================================================
ENVIRONMENT=production

# ==================================================================
# DOMAIN CONFIGURATION - RNRINFO.DEV
# ==================================================================
DOMAIN=rnrinfo.dev
API_SUBDOMAIN=api
FORCE_HTTPS=true

# ==================================================================
# DATABASE CONFIGURATION - REPLACE WITH YOUR PRODUCTION DATABASE
# ==================================================================
DATABASE_URL=postgresql://username:password@your-db-host/pawnpro

# ==================================================================
# SECURITY SETTINGS - GENERATE STRONG KEYS!
# ==================================================================
# Generate using: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-256-bit-key-change-this-immediately
SECRET_KEY=your-api-secret-key-change-this-too

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=120

# ==================================================================
# CORS SECURITY - RNRINFO.DEV DOMAINS
# ==================================================================
CORS_ORIGINS=https://rnrinfo.dev,https://www.rnrinfo.dev,https://api.rnrinfo.dev,https://app.rnrinfo.dev

# ==================================================================
# RATE LIMITING - PRODUCTION SETTINGS
# ==================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

# ==================================================================
# PASSWORD SECURITY POLICIES
# ==================================================================
MIN_PASSWORD_LENGTH=12
REQUIRE_SPECIAL_CHARS=true

# ==================================================================
# SERVER CONFIGURATION
# ==================================================================
HOST=0.0.0.0
PORT=443

# ==================================================================
# HTTPS/SSL CONFIGURATION FOR RNRINFO.DEV
# ==================================================================
USE_HTTPS=true
SSL_CERT_FILE=/etc/letsencrypt/live/rnrinfo.dev/fullchain.pem
SSL_KEY_FILE=/etc/letsencrypt/live/rnrinfo.dev/privkey.pem

# ==================================================================
# SECURITY FEATURES
# ==================================================================
ENABLE_SECURITY_HEADERS=true

# ==================================================================
# LOGGING CONFIGURATION
# ==================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/pawnsoft/api.log

# ==================================================================
# FILE UPLOAD SECURITY
# ==================================================================
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf
UPLOAD_DIR=/var/www/pawnsoft/uploads